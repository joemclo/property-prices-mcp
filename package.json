{
  "name": "property-prices-mcp",
  "version": "1.1.0",
  "description": "Property Price Search MCP Server using TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "property-prices-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**",
    "scripts/**",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "node build.js",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "fetch:codepo": "node scripts/fetch-codepo.js",
    "build:postcodes": "node scripts/build-postcodes.js",
    "setup:postcodes": "npm run fetch:codepo && npm run build:postcodes",
    "test": "jest",
    "test:unit": "jest src/__tests__/unit",
    "test:e2e": "RUN_E2E_TESTS=true jest src/__tests__/e2e",
    "test:all": "RUN_E2E_TESTS=true jest",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "cli": "node dist/cli.js",
    "test-mcp": "node dist/test-mcp.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^11.10.0",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob": "^13.0.3",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
