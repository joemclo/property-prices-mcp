{
  "name": "property-prices-mcp",
  "version": "1.1.0",
  "description": "Property Price Search MCP Server using TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "property-prices-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "node build.js",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "fetch:codepo": "node scripts/fetch-codepo.js",
    "build:postcodes": "node scripts/build-postcodes.js",
    "setup:postcodes": "npm run fetch:codepo && npm run build:postcodes",
    "test": "jest",
    "test:unit": "jest src/__tests__/unit",
    "test:e2e": "RUN_E2E_TESTS=true jest src/__tests__/e2e",
    "test:all": "RUN_E2E_TESTS=true jest",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "cli": "node dist/cli.js",
    "test-mcp": "node dist/test-mcp.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "better-sqlite3": "^11.10.0",
    "winston": "^3.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "glob": "^13.0.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
